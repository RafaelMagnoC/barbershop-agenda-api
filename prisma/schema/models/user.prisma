model User {
  id         String    @id @default(uuid())
  name       String
  birthday   DateTime
  gender     Gender
  username   String?   @unique
  is_active  Boolean   @default(true)
  token      String?   @unique
  created_at DateTime  @default(now())
  updated_at DateTime?

  // relations
  address     Address?  @relation(fields: [address_id], references: [id])
  address_id  String?   @unique
  contact     Contact?  @relation(fields: [contact_id], references: [id])
  contact_id  String?   @unique
  document    Document? @relation(fields: [document_id], references: [id])
  document_id String?   @unique

  // relations user rules
  administrator Administrator? @relation
  receptionist  Receptionist?  @relation
  develop       Develop?       @relation
  attendant     Attendant?     @relation
  client        Client?        @relation

  // relation with enterprise
  enterprises UserEnterprise[]

  @@map("user")
}
